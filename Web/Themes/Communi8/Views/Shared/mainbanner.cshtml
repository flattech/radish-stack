@model Web.Models.Post.PageViewModel.WidgetViewModel
@if (Model != null && Model.posts != null && Model.posts.Count > 0)
{
    foreach (var post in Model.posts.Take(1))
    {
        <div id="top" class="et_pb_section et_pb_section_parallax  et_pb_section_0 et_pb_with_background et_section_regular" style="height: 100vh;">
            <div class="et_parallax_bg" style=""></div>
            <!--background-image: url(/preview/Divi-One-Page/wp-content/uploads/2014/07/onepage-bg.jpg);-->

            <div class="et_pb_row et_pb_row_0">

                <div class="et_pb_column et_pb_column_4_4  et_pb_column_0">

                    <div class="et_pb_text et_pb_module et_pb_bg_layout_light et_pb_text_align_left  et_pb_text_0" style="position: absolute; width: 100%;">
                        @Html.Raw(post.Detail)

                    </div>

                    <div class="et_pb_module et-waypoint et_pb_image et_pb_animation_bottom et_pb_image_0 et_always_center_on_mobile et_pb_image_sticky">

                        <img src="@post.FeaturedImage" class="" style="float: right;" />


                    </div>
                </div> <!-- .et_pb_column -->

            </div> <!-- .et_pb_row -->

        </div>
    }
    <!-- .et_pb_section -->

}